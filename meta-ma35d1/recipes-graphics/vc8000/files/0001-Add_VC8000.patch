-{
-	unsigned int left;
-	int ret;
-
-	if (!hdr || size < 0)
-		return false;
-
-	left = size;
-
-	while (left > sizeof (*hdr) && left >= hdr->size &&
-	       hdr->type != MSM_VIDC_EXTRADATA_NONE) {
-		if (hdr->type == MSM_VIDC_EXTRADATA_INDEX) {
-			struct msm_vidc_extradata_index *payload = (void *)hdr->data;
