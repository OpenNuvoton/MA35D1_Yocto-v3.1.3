-		} else {
-			ret = check_extradata_payload(hdr->type,
-						      (void *)hdr->data,
-						      hdr->data_size);
-		}
-
-		if (ret)
-			return false;
-
-		left -= hdr->size;
-		hdr = (void *)hdr + hdr->size;
