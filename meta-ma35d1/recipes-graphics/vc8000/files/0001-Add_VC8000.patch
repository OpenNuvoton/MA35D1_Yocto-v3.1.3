+	}
+
+	vid->cap_w = fmt.fmt.pix_mp.width;
+	vid->cap_h = fmt.fmt.pix_mp.height;
+
+	vid->cap_buf_size[0] = fmt.fmt.pix_mp.plane_fmt[0].sizeimage;
