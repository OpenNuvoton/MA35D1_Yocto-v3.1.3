+	i->in.offs = 0;
+	i->in.p = mmap(0, i->in.size, PROT_READ, MAP_SHARED, i->in.fd, 0);
+	if (i->in.p == MAP_FAILED) {
+		err("Failed to map input file");
+		return -1;
+	}
+
+	return 0;
+}
+
+void input_close(struct instance *i)
+{
+	printf("unmap and close input file.\n");
+	munmap(i->in.p, i->in.size);
+	close(i->in.fd);
+}
